{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "File Setu",
        "description": "This is <b>Pavan's</b> File api using NodeJS.",
        "termsOfService": "https://pavan-dev-portfolio.netlify.app/",
        "contact": {
            "name": "Pavan Yadav",
            "email": "pavan.yadav0723@gmail.com",
            "url": "https://pavan-dev-portfolio.netlify.app/"
        }
    },
    "host": "localhost:5200",
    "basePath": "/",
    "tags": [
        {
            "name": "Auth",
            "description": "All the autherization method"
        }
    ],
    "schemes": [
        "http",
        "https"
    ],
    "securityDefinitions": {
        "Authorization": {
            "type": "apiKey",
            "name": "Authorization",
            "description": "Value: Bearer ",
            "in": "header",
            "scheme": "bearer"
        }
    },
    "consumes": [
        "application/json",
        "application/pdf"
    ],
    "produces": [
        "application/json"
    ],
    "JWT": {
        "type": "apiKey",
        "name": "token",
        "in": "header"
    },
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login and get the token",
                "parameters": [
                    {
                        "name": "obj",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/LoginModel"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully login",
                        "schema": {
                            "$ref": "#/definitions/TokenGenerateModel"
                        }
                    },
                    "401": {
                        "description": "Wrong Credentials",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Create a new user",
                "parameters": [
                    {
                        "name": "obj",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/RegisterModel"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully register",
                        "schema": {
                            "$ref": "#/definitions/TokenGenerateModel"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                    
                },
                "security": [
                    {
                        "Authorization": []
                    }
                ]
            }
        },
        "/auth/user": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Get the user required details",
                "responses": {
                    "200": {
                        "description": "Successfully fetched",
                        "schema": {
                            "$ref": "#/definitions/SampleModel"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                },
                "security": [
                    {
                        "Authorization": []
                    }
                ]
            }
        },
        "/auth/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Refresh token and access token generated",
                "parameters": [
                    {
                        "name": "refresh_token",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/TokenModel"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully generated",
                        "schema": {
                            "$ref": "#/definitions/SampleModel"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout the user token and delete the token",
                "parameters": [
                    {
                        "name": "obj",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/TokenModel"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully logout",
                        "schema": {
                            "$ref": "#/definitions/SampleModel"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "LoginModel": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "john@mail.com"
                },
                "password": {
                    "type": "string",
                    "example": "john123"
                }
            },
            "required": [
                "email",
                "password"
            ]
        },
        "RegisterModel": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "example": "John Snow"
                },
                "email": {
                    "type": "string",
                    "example": "mail@mail.com"
                },
                "password": {
                    "type": "string",
                    "example": "john123"
                },
                "confirm_password": {
                    "type": "string",
                    "example": "john123"
                }
            },
            "required": [
                "name",
                "email",
                "password"
            ]
        },
        "TokenModel": {
            "type": "object",
            "properties": {
                "refresh_token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2MzhiMWJmMjQ2NGQ5YTQxNDY3MjAyMzAiLCJyb2xlIjoiYWRtaW4iLCJpYXQiOjE2NzAwNzI0ODEsImV4bCI3OIcwMTYzMDA4MX0.2u0cXhR_Ozmephlc4htyuYjdUdgA4rRfHNyncwOvdKg"
                }
            },
            "required": [
                "refresh_token"
            ]
        },
        "TokenGenerateModel":{
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string"
                },
                "refresh_token": {
                    "type": "string"
                }
            }
        },
        "SampleModel":{
            "type": "object",
            "description":"All the required response"
        },
        "ErrorModel":{
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        }
    }
}